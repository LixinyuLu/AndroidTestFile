<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/my_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="32dp"
            android:layout_marginLeft="-120dp"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/my_text_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请登录以获取独家服务"
            android:textSize="18dp"
            android:layout_marginLeft="-60dp"
            android:textColor="#666666"
            android:layout_marginBottom="70dp"
            />


        <EditText
            android:background="@drawable/squircle_button_grey"
            android:inputType="textPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:hint="   用户名"
            android:id="@+id/usernameEditText"
            android:textSize="15sp"
            android:layout_marginBottom="30dp" />


        <EditText
            android:background="@drawable/squircle_button_grey"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="   密码"
            android:id="@+id/passwordEditText"
            android:textSize="15sp"
            android:inputType="textPassword"
            />



        <LinearLayout
            android:id="@+id/circleButtonsLayout2"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <!-- 第一个圆形按钮 -->
            <CheckBox
                android:id="@+id/saveLoginCheckBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:hint="记住我"
                android:textSize="16dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="150dp"/>

            <TextView
                android:id="@+id/my_text_view3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:textSize="16dp"
                android:textColor="#666666"
                android:layout_marginBottom="20dp"
                />


        </LinearLayout>

        <!-- 第二个方形按钮 -->
        <Button
            android:id="@+id/button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="15sp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/squircle_button"
            android:textColor="#FFFFFF"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="15dp"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:text="第三方账号登录"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#999" />
            <TextView
                android:id="@+id/textView1"
                android:layout_width="100dip"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv"
                android:background="#999" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="100dip"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv"
                android:background="#999" />
        </RelativeLayout>


    </LinearLayout>

    <!-- 并排排列的圆形按钮 -->
    <LinearLayout
        android:id="@+id/circleButtonsLayout"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp">

        <!-- 第一个圆形按钮 -->
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_button_background"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginEnd="50dp"
            />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_button_background"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/circleButtonsLayout3"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
        android:id="@+id/my_text_view4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还没有账号？注册"
        android:textSize="16dp"
        android:textColor="#666666"
        android:layout_marginBottom="50dp"

        />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

